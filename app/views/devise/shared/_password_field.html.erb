<%#
Local variables
---------------
f: form_for helper
attribute: attribute name
post_label (optional): text to follow the label
%>
<%= render partial: 'shared/webform/field', locals: {
  form: f,
  attribute: attribute,
  field: f.password_field(attribute, autocomplete: "off", class: "form-control"),
  post_label: local_assigns[:post_label],
  columns: 3
} %>
