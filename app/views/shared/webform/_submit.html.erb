<%#
Local variables
---------------
action: :create or :update
form: form_for helper
%>
<% case action %>
<% when :create %>
  <% button_action = 'Add' %>
  <% klass = "btn btn-success" %>
<% when :update %>
  <% button_action = 'Update' %>
  <% klass = "btn btn-warning" %>
<% else %>
  <% raise 'unknown action' %>
<% end %>
<%= form.submit "#{button_action} #{form.object.class.human_name}", class: klass %>
